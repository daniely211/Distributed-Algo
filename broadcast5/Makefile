# Daniel Yung (lty16)  Tim Green (tpg16)

# distributed algorithms, n.dulay, 25 jan 19
# coursework 1, broadcast algorithms
# Makefile, v2

RELIABILITY = 50
PEERS = 5

# call main (for non-docker single node), main_net (for docker), main_ssh (for lan ssh)
MAIN     = Broadcast5.main
MAIN_NET = Broadcast5.main_net
MAIN_SSH = Broadcast5.main_ssh

PROJECT  = da347
NETWORK  = $(PROJECT)_network

LOCAL	 = mix run --no-halt -e $(MAIN) $(RELIABILITY) $(PEERS)
COMPOSE  = MAIN=$(MAIN_NET) RELIABILITY=$(RELIABILITY) PEERS=$(PEERS) docker-compose -p $(PROJECT)
SSH      = MAIN=$(MAIN_SSH) RELIABILITY=$(RELIABILITY) PEERS=$(PEERS)

# non-docker compile and run
compile:
	mix compile

run:
	$(LOCAL)
	@echo ----------------------

clean:
	mix clean

# docker compile and run
dcompile dockercompile:
	mix clean
	docker run -it --rm -v "$(PWD)":/project -w /project elixir:alpine mix compile

drun dockerrun:
	@make dockercompile
	@make up
	@echo ----------------------

# ssh commands
ssh_run:
	mix clean
	mix compile
	@make ssh_up

ssh_up:
	$(SSH) ./ssh.sh up

ssh_down:
	$(SSH) ./ssh.sh down

ssh_show:
	$(SSH) ./ssh.sh show

# more docker commands
up:
	$(COMPOSE) up

down:
	$(COMPOSE) down
	@make show

kill:
	docker rm -f `docker ps -a -q`
	docker network rm $(NETWORK)

show:
	@echo ----------------------
	@make ps
	@echo ----------------------
	@make network

show2:
	@echo ----------------------
	@make ps2
	@echo ----------------------
	@make network

ps:
	docker ps -a --format 'table {{.Names}}\t{{.Image}}\t{{.Status}}'

ps2:
	docker ps -a -s

network net:
	docker network ls

inspect:
	docker network inspect $(NETWORK)

netrm:
	docker network rm $(NETWORK)

conrm:
	docker rm $(ID)
